{
	"schemaVersion": 1,
	"id": "accessible-step",
	"version": "${version}",
	"name": "Accessible Step",
	"description": "Walk up full-height blocks without having to press jump!",
	"authors": ["secret_online"],
	"license": "MPL-2.0",
	"icon": "assets/accessible-step/icon.png",
	"environment": "client",
	"entrypoints": {
		"main": ["co.secretonline.accessiblestep.AccessibleStep"],
		"client": ["co.secretonline.accessiblestep.AccessibleStepClient"]
